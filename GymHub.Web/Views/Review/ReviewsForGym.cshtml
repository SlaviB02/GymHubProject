@model IEnumerable<AllReviewViewModel>

<h2 class="text-center">Reviews for Gym</h2>
<hr />

<div class="text-center row">
    @foreach (var e in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h3 class="card-title mt-1">@e.Title </h3>
                <p class="card-title mt-1">@e.Body</p>
                <p class="card-title mt-1">Rating: @e.Rating</p>
                <p class="fw-bold"><span class="fw-bold">By: </span>@e.UserName</p>
                @if (User?.Identity?.Name == @e.UserName)
                {
                    <a asp-controller="Review" asp-action="Delete" asp-route-id="@e.ReviewId" class="btn btn-warning btn-dark-text btn-rounded fw-bold">Delete</a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}