@model AddMembershipInputModel
@{
    ViewBag.Title = "Make Membership";
}


 <h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.StartDate" class="form-label-add-edit">StartDate</label>
                <input asp-for="@Model.StartDate" class="form-control" aria-required="true" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">PhoneNumber</label>
                <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="xxx-xxx-xxxx" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Type" class="form-label-add-edit">Select Type</label>
                <select asp-for="@Model.Type" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Type....</option>
                    @foreach (var type in Model.Types!)
                    {
                        <option value="@type">@type.ToString()</option>
                    }
                </select>
                <span asp-validation-for="@Model.Type" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GymId" class="form-label-add-edit">Select Gym</label>
                <select asp-for="@Model.GymId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Gym....</option>
                    @foreach (var gym in Model.Gyms!)
                    {
                        <option value="@gym.Id">@gym.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.GymId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Make" />
            </div>
        </form>
    </div>
</div> 


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}