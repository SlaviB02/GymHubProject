@model GymDetailsViewModel

<img src="@Model.ImageUrl" class="card-img-top img-fluid" style=" width: 400px; height: 400px; object-fit:contain;" />

<h2>@Model.Name</h2>

<p><strong>Address:</strong> @Model.Address</p>

<p><strong>Description:</strong> @Model.Description</p>

<p><span>Working Hours: </span>@Model.OpeningHour h - @Model.ClosingHour h</p>

<a asp-action="Index" class="btn btn-primary">Back to Gyms</a>

<a asp-action="Manage" class="btn btn-primary">Back to Manage Gyms</a>

<a asp-controller="Trainer" asp-action="GetTrainersByGym" asp-route-id="@Model.Id" class="btn btn-secondary">Trainers in Gym</a>



