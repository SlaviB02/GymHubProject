@model GymDetailsViewModel



@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" class="card-img-top img-fluid" style="height: 400px;width:400px; object-fit: cover;">
}
else
{
    <img src="~/images/DefaultGym.jfif" class="card-img-top img-fluid" style="height: 400px;width:400px; object-fit: cover;" alt="Placeholder Image">
}


<h2>@Model.Name</h2>

<p><strong>Address:</strong> @Model.Address</p>

<p><strong>Description:</strong> @Model.Description</p>

<p><strong>Working Hours: </strong>@Model.OpeningHour h - @Model.ClosingHour h</p>

@if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
{
    <a asp-area="Admin" asp-action="Manage" class="btn btn-primary">Back to Gyms</a>
}
else
{
    <a asp-action="Index" class="btn btn-primary">Back to Gyms</a>
}

<a asp-controller="Trainer" asp-action="GetTrainersByGym" asp-route-id="@Model.Id" class="btn btn-primary">Trainers in Gym</a>
<a asp-controller="Class" asp-action="ClassesForGym" asp-route-id="@Model.Id" class="btn btn-primary">Gym Classes</a>



