﻿
@model AddClassViewModel

@{
    ViewBag.Title = "Add Class";
}


 <h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Class Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Instructor" class="form-label-add-edit">Class Instructor</label>
                <input asp-for="@Model.Instructor" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Instructor" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DateAndTime" class="form-label-add-edit">Date of Seminar</label>
                <input asp-for="@Model.DateAndTime" class="form-control" aria-required="true" placeholder="dd/MM/yyyy HH:mm" />
                <span asp-validation-for="@Model.DateAndTime" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Duration" class="form-label-add-edit">Duration</label>
                <input asp-for="@Model.Duration" class="form-control" placeholder="20-120 min" />
                <span asp-validation-for="@Model.Duration" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GymId" class="form-label-add-edit">Select Gym</label>
                <select asp-for="@Model.GymId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Gym....</option>
                    @foreach (var gym in Model.Gyms!)
                    {
                        <option value="@gym.Id">@gym.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.GymId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div> 


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}