@model IEnumerable<AllReviewViewModel>

@{
    ViewData["Title"] = "Manage Reviews";
}

<h2>Manage Reviews</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th>User Name</th>
            <th>Gym Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Title</td>
                <td>@review.Body</td>
                <td>@review.UserName</td>
                <td>@review.GymName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@review.ReviewId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@review.ReviewId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>