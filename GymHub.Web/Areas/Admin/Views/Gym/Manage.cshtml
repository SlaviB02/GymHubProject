@model IEnumerable<AllGymViewModel>

@{
    ViewData["Title"] = "Manage Gyms";
}

<h2>Manage Gyms</h2>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">Add New Gym</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Working Hours</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var gym in Model)
        {
            <tr>
                <td>@gym.Name</td>
                <td>@gym.Address</td>
                <td>@gym.OpeningHour - @gym.ClosingHour</td>
                <td>
                    <a asp-area="" asp-action="Details" asp-route-id="@gym.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@gym.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@gym.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>